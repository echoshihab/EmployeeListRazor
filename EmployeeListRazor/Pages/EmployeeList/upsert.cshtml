@page
@model EmployeeListRazor.UpsertModel

<br />
<h2 class="text-info">@(Model.Employee.Id!=0? "Edit":"Add") Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if  (Model.Employee.Id != 0)
        {
            <input type="hidden" asp-for="Employee.Id" />
        }
        <input type="hidden" asp-for="Employee.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Name" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Department"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Department" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Department" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Employee.Position"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Position" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Position" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-2">
                <button type="submit" class="btn btn-primary form-control">@(Model.Employee.Id != 0 ? "Update" : "Add")</button>
        
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success from-control"> Back to List </a>
            </div>
        </div>
    </form>
</div>

<!--this below is for client side validation-->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}